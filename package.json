{
  "name": "nitroidb",
  "version": "1.0.0",
  "description": "Supercharged IndexedDB. Simple, Fast, Developer-Friendly",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run build:types && npm run build:esm && npm run build:cjs && npm run build:iife",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:esm": "FORMAT=esm rollup -c rollup.config.js",
    "build:cjs": "FORMAT=cjs rollup -c rollup.config.js",
    "build:iife": "FORMAT=iife rollup -c rollup.config.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:browser": "playwright test",
    "test:all": "npm run test && npm run test:browser",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:all"
  },
  "keywords": [
    "indexeddb",
    "storage",
    "database",
    "browser",
    "typescript",
    "safari",
    "pwa"
  ],
  "author": "Hrithik Dutta",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.54.0",
    "rollup": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {},
  "dependencies": {}
}

